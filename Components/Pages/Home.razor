@page "/"

<PageTitle>Home</PageTitle>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">


<style>
    * {
        font-family: 'Poppins', sans-serif;
        box-sizing: border-box;
    }

    body {
        background-image: url('images/rate.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 81vh;
    }

    .first {
        height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        position: relative;
        text-align: center;
        color: white;
    }

    .overlay {
        position: absolute;
        top: 86px;
        left: 0;
        width: 100%;
        height: 93%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    .predict {
        position: relative;
        z-index: 2;
        width: 100%;
        text-align: center;
    }

    h1 {
        font-size: 5.5rem;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
        margin-bottom: -10px;
        white-space: nowrap;
        text-align: center;
        width: 100%;
    }

    .pred {
        font-size: 1rem;
        line-height: 1.6;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
        margin-bottom: 30px;
        margin-left: 10%;
        margin-right: 10%;
    }

    .button-link {
        font-size: 1.2rem;
        padding: 12px 25px;
        background-color: #14732a;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .button-link:hover {
        background-color: #0f571f;
        transform: scale(1.05);
    }

    .author {
        position: absolute;
        bottom: 50px;
        width: 100%;
        text-align: center;
        color: white;
        font-size: 1rem;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 1);
        z-index: 2;
    }
</style>

<div class="overlay"></div>

<body>
    <section class="first">
        <div class="predict">
            <h1>Historical Currency Converter</h1>
            <p class="pred mt-3">
                Our system is a Currency Converter web app that allows users to quickly and accurately convert currencies, with the added feature of selecting specific dates to access historical exchange rates.
            </p>
            <a href="/convert" class="button-link">Try Now</a>
        </div>

        <p class="author">Manon-og | Guanzon | Tampus</p>
    </section>
</body>
